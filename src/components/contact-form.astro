---
const ACCESS_KEY = "3123ce61-85c1-4f6e-9926-a2a4bc346639"; // your Web3Forms public access key
---

<section
  class="mx-auto max-w-2xl rounded-2xl border border-gray-200 bg-white p-6 shadow-sm"
>
  <header class="mb-6">
    <h2 class="text-2xl font-semibold tracking-tight">Contact us</h2>
    <p class="mt-1 text-sm text-gray-600">
      We usually reply within a business day.
    </p>
  </header>

  <form id="contact-form" class="space-y-5">
    <!-- Required by Web3Forms -->
    <input type="hidden" name="access_key" value={ACCESS_KEY} />
    <input
      type="checkbox"
      name="botcheck"
      class="hidden"
      tabindex="-1"
      autocomplete="off"
    />

    <div class="grid gap-5 sm:grid-cols-2">
      <div class="flex flex-col gap-1.5">
        <label for="name" class="text-sm font-medium">Name</label>
        <input
          id="name"
          name="name"
          type="text"
          required
          class="w-full rounded-xl border border-gray-300 px-3 py-2 text-gray-900 outline-none focus:border-gray-400 focus:ring-2 focus:ring-gray-200"
          placeholder="Ada Lovelace"
        />
      </div>

      <div class="flex flex-col gap-1.5">
        <label for="email" class="text-sm font-medium">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          class="w-full rounded-xl border border-gray-300 px-3 py-2 text-gray-900 outline-none focus:border-gray-400 focus:ring-2 focus:ring-gray-200"
          placeholder="ada@lovelace.dev"
        />
      </div>
    </div>

    <div class="flex flex-col gap-1.5">
      <label for="subject" class="text-sm font-medium">Subject</label>
      <input
        id="subject"
        name="subject"
        type="text"
        required
        class="w-full rounded-xl border border-gray-300 px-3 py-2 text-gray-900 outline-none focus:border-gray-400 focus:ring-2 focus:ring-gray-200"
        placeholder="How can we help?"
      />
    </div>

    <div class="flex flex-col gap-1.5">
      <label for="message" class="text-sm font-medium">Message</label>
      <textarea
        id="message"
        name="message"
        required
        rows="5"
        class="w-full rounded-xl border border-gray-300 px-3 py-2 text-gray-900 outline-none focus:border-gray-400 focus:ring-2 focus:ring-gray-200"
        placeholder="Write your message here..."></textarea>
    </div>

    <div class="flex items-center justify-between gap-4">
      <label class="inline-flex items-center gap-2 text-sm text-gray-600">
        <input
          type="checkbox"
          name="subscribe"
          value="true"
          class="rounded-md border-gray-300"
        />
        Subscribe to updates
      </label>

      <button
        type="submit"
        class="inline-flex items-center justify-center rounded-xl bg-gray-900 px-4 py-2 text-sm font-medium text-white transition hover:bg-black focus:outline-none focus:ring-2 focus:ring-gray-300 disabled:opacity-50"
      >
        Send message
      </button>
    </div>
  </form>
</section>

<!-- Thank You Modal -->
<div
  id="thankyou-modal"
  class="fixed inset-0 z-50 hidden items-center justify-center bg-black/50"
>
  <div class="w-full max-w-md rounded-2xl bg-white p-6 shadow-lg text-center">
    <h3 class="text-xl font-semibold">Thank you!</h3>
    <p class="mt-2 text-gray-600">
      Your message has been sent successfully. We'll get back to you soon.
    </p>
    <button
      id="close-modal"
      class="mt-4 rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white hover:bg-black focus:outline-none focus:ring-2 focus:ring-gray-300"
    >
      Close
    </button>
  </div>
</div>

<script is:inline>
  const form = document.getElementById("contact-form");
  const modal = document.getElementById("thankyou-modal");
  const closeBtn = document.getElementById("close-modal");
  let autoCloseTimer;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    try {
      const res = await fetch("https://api.web3forms.com/submit", {
        method: "POST",
        body: formData,
        headers: { Accept: "application/json" },
      });

      const data = await res.json();

      if (data.success) {
        form.reset();
        modal.classList.remove("hidden");
        modal.classList.add("flex");

        // Auto close after 4 seconds
        autoCloseTimer = setTimeout(() => {
          modal.classList.add("hidden");
          modal.classList.remove("flex");
        }, 4000);
      } else {
        alert(data.message || "Something went wrong. Please try again.");
      }
    } catch (err) {
      alert("Network error. Please try again.");
    }
  });

  closeBtn.addEventListener("click", () => {
    modal.classList.add("hidden");
    modal.classList.remove("flex");
    clearTimeout(autoCloseTimer);
  });
</script>

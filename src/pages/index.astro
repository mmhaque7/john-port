---
import Navbar from "../components/Navbar.astro";

import Hero from "../components/Hero.astro";
import ImageCarousel from "../components/ImageCarousel.astro";
import Layout from "../layouts/Layout.astro";
import HeroShowcase from "../components/HeroShowcase.astro";

const images = [
  {
    src: "https://images.unsplash.com/photo-1660831421396-bb20e1149468?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    alt: "Living Room",
    detail:
      '<h2 class="text-xl font-semibold mb-2">Living Room Design</h2><p>Includes layout planning, lighting strategy, and custom furnishings.</p>',
  },
  {
    src: "https://images.unsplash.com/photo-1618219908412-a29a1bb7b86e?q=80&w=627&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    alt: "Kitchen",
    detail:
      '<h2 class="text-xl font-semibold mb-2">Kitchen Renovation</h2><p>Modern cabinet design, appliance integration, and material selection.</p>',
  },
  {
    src: "https://images.unsplash.com/photo-1606744888344-493238951221?q=80&w=1074&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    alt: "Bedroom",
    detail:
      '<h2 class="text-xl font-semibold mb-2">Master Bedroom</h2><p>Color scheme consultation, lighting, and custom built-ins.</p>',
  },
];

const navItems = [
  { href: "/about", label: "About" },
  { href: "/media", label: "Media" },
  { href: "/blog", label: "Blog" },
];

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout>
  <Navbar
    items={navItems}
    brand={{
      name: "MySite",
      href: "/",
      logoSrc: "src/assets/logo.png",
      alt: "MySite logo",
    }}
    cta={{ label: "Contact", href: "/Contact" }}
    currentPath={Astro.url.pathname}
  />

  <Hero
    title="Where Vision Meets Elegance"
    subtitle="For over two decades, I’ve been crafting interiors that balance sophistication, comfort, and individuality—delivering spaces that leave a lasting impression."
    ctaText="Book a Consultation"
    ctaLink="/contact"
    imageUrl="https://res.cloudinary.com/didltutgq/image/upload/v1756395552/IMG_2026_abu8nh.jpg"
  />
  <HeroShowcase
    imageSrc="/images/mono-shelves.jpg"
    imageAlt="Modern built-in shelves and fireplace"
    headline="THAT GREAT DESIGN"
    accent="is forever"
    copy="We craft holistic spaces that balance function and calm. Monochrome materials, quiet textures, and refined details tell your story with restraint."
    name="Isabelle B."
    title="Principal / Founder"
    ctaLabel="Learn More"
    ctaHref="/about"
  />

  <ImageCarousel images={images} title="Work" /></Layout
>

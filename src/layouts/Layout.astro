---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import logo from "../assets/logo.png"; // you can change this

export interface Props {
  title?: string;
  currentPath?: string;
}

const { title = "Johnathan Furlong", currentPath } = Astro.props;

// Define your nav items here once
const navItems = [
  { href: "/about", label: "About" },
  { href: "/Media", label: "Gallery" },
    {href:"/sketches", label: "Sketches"},
  { href: "/blog", label: "Blog" },

];

// Define brand + CTA here once
const brand = {
  name: "MySite",
  href: "/",
  logoSrc: logo.src,
  alt: "MySite logo",
};
const cta = { label: "Contact", href: "/contact" };
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-black text-white antialiased">
    <Navbar
      items={navItems}
      brand={brand}
      cta={cta}
      currentPath={currentPath}
    />

    <main>
      <slot />
    </main>
  </body>
</html>
